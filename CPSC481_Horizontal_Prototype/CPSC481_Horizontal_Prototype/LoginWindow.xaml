<UserControl x:Class="CPSC481_Horizontal_Prototype.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="300">
    <Grid Background="#FFF1EFEF">
        <PasswordBox HorizontalAlignment="Left" Margin="10,121,0,0" VerticalAlignment="Top" Width="118" Height="24"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="8,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Login:" HorizontalAlignment="Left" Margin="8,30,0,0" VerticalAlignment="Top" Width="64"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
        <Button Content="Enter&#xD;&#xA;" HorizontalAlignment="Left" Margin="103,197,0,0" VerticalAlignment="Top" Width="75" Height="20" Click="Button_Click"/>
        <StackPanel HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="300" RenderTransformOrigin="0.52,-0.48" Margin="-332,-2,0,0"/>
    </Grid>
</UserControl>
